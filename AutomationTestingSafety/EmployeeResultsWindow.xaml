<Window x:Class="AutomationTestingSafety.EmployeeResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результаты тестов" Height="500" Width="800"
        WindowStartupLocation="CenterScreen"  Background="#F5F5F5" FontFamily="Segoe UI">
    <Window.Resources>
        <!-- Стиль для кнопок -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4d7dc6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E4A6E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- Стиль для заголовков столбцов DataGrid -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#4d7dc6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>
    </Window.Resources>
    <Border Background="White" BorderBrush="#DDD" BorderThickness="1" CornerRadius="5" Padding="20" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!-- Заголовок с информацией о пользователе -->
            <Border Grid.Row="0" Background="#4d7dc6" CornerRadius="4" Padding="10" Margin="0,0,0,15">
                <TextBlock x:Name="tbUserInfo" FontSize="16" FontWeight="Medium" Foreground="White" TextWrapping="Wrap"/>
            </Border>
            <!-- DataGrid с результатами тестирования -->
            <DataGrid x:Name="dgResults" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                RowBackground="White" AlternatingRowBackground="#F8FAFC" HeadersVisibility="Column"
                BorderThickness="0" Background="Transparent" ColumnHeaderHeight="40" RowHeight="35" FontSize="14"
                VerticalGridLinesBrush="#E5E7EB" HorizontalGridLinesBrush="#E5E7EB">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Время" Binding="{Binding TimeTaken}" Width="150"/>
                    <DataGridTextColumn Header="Набрано" Binding="{Binding Score}" Width="150"/>
                    <DataGridTextColumn Header="Мин. балл" Binding="{Binding MinimalScore}" Width="150"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="150"/>
                </DataGrid.Columns>
            </DataGrid>
            <!-- Панель действий -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <Button Content="Закрыть" Style="{StaticResource ModernButtonStyle}" Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
