<Window x:Class="AutomationTestingSafety.AdminTestResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результаты тестов сотрудника" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" Background="#F5F5F5" FontFamily="Segoe UI">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Информация о сотруднике -->
        <TextBlock x:Name="tbUserInfo" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10"/>
        <!-- DataGrid с результатами -->
        <DataGrid x:Name="dgTestResults" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="True"
                  RowBackground="White" AlternatingRowBackground="#F9F9F9">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID результата" Binding="{Binding TestResultId}" Width="80"/>
                <DataGridTextColumn Header="Время прохождения" Binding="{Binding TimeTaken}" Width="100"/>
                <DataGridTextColumn Header="Набрано" Binding="{Binding Score}" Width="80"/>
                <DataGridTextColumn Header="Мин. балл" Binding="{Binding MinimalScore}" Width="80"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="120"/>
                <DataGridTextColumn Header="Детали" Binding="{Binding Details}" Width="*"/>
            </DataGrid.Columns>

        </DataGrid>
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="Экспортировать результат" Width="180" Height="40" Click="ExportButton_Click"/>
            <Button Content="Закрыть" Width="120" Height="40" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
