<Window x:Class="AutomationTestingSafety.EmployeeTestResultWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Результаты теста" Height="500" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5" FontFamily="Segoe UI">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Заголовок с общей информацией -->
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="tbSummary" FontSize="18" FontWeight="Bold" TextWrapping="Wrap"/>
        </StackPanel>
        <!-- Список результатов по вопросам -->
        <DataGrid x:Name="dgResults" Grid.Row="1" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Вопрос" Binding="{Binding QuestionText}" Width="*"/>
                <DataGridTextColumn Header="Ваш ответ" Binding="{Binding YourAnswer}" Width="*"/>
                <DataGridTextColumn Header="Правильный" Binding="{Binding CorrectAnswer}" Width="*"/>
                <DataGridTextColumn Header="Результат" Binding="{Binding IsCorrectText}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Кнопка закрытия -->
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="10">
            <Button Content="Закрыть" Width="120" Height="40" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
