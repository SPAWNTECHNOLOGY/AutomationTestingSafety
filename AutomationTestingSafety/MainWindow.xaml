<Window x:Class="AutomationTestingSafety.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomationTestingSafety"
        mc:Ignorable="d"
        Title="Авторизация | SAFETECH" 
        Height="500" 
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFD8D8D8"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5,0,10"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF2C3E50"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF2C3E50"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
            <Setter Property="BorderBrush" Value="#FFDDDDDD"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF2C3E50"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF2C3E50"/>
                    <Setter Property="BorderThickness" Value="1.5"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FF2C3E50"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF1A2A38"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#FF0F1C26"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#FF666666"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Border CornerRadius="10" 
                Background="White" 
                BorderThickness="1" 
                BorderBrush="#FFDDDDDD"
                Width="350"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="25">

            <StackPanel>
                <!-- Заголовок -->
                <TextBlock Text="SAFETECH" 
                           FontSize="26" 
                           FontWeight="Bold" 
                           Foreground="#FF2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- Подзаголовок -->
                <TextBlock Text="Автоматизация тестирования охраны труда" 
                           HorizontalAlignment="Center"
                           TextAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Поля ввода -->
                <TextBlock Text="Имя пользователя" Margin="0,0,0,5"/>
                <TextBox x:Name="UsernameBox"/>

                <TextBlock Text="Пароль" Margin="0,10,0,5"/>
                <PasswordBox x:Name="PasswordBox"/>

                <!-- Кнопка входа -->
                <Button Content="Войти" Click="LoginButton_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>